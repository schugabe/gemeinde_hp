<div class="col-sm-6">
    <div class="row">
        <div class="col-sm-3"><%= image_tag person.avatar.url(:medium), class:"img-responsive" %></div>
        <div class="col-sm-9">
            <h2><%= person.name %> <small><%= person.position %></small></h2>
            <p>
                <%= person.about %>
                <%= mail_to person.contact, "Kontakt" %>
            </p>
        </div>
    </div>
    
</div>