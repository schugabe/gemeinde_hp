<%= bootstrap_form_for(@page, style: :horizontal, left: "col-sm-2", right: "col-sm-7") do |f| %>
    <%= print_errors @page %>

    <%= f.text_field :title, class: "col-sm-1" %>
    <%= f.text_field :permalink %>
    <%= f.text_area :content, class: :wysihtml5, rows: 25 %>
    <%= f.form_group do %>
        <%= f.check_box :in_menu, label: t('activerecord.attributes.page.in_menu') %>
    <% end %>
    
    <%= f.form_group do %>
        <%= f.submit t('actions.save') %>
    <% end %>
<% end %>