<%= new_btn 'role.new', new_role_path %>

<div class="row">
<% @users.each do |user| %>
    <% if user.roles.length > 0 %>
        <div class="col-xs-6">
            <div class="well well-sm">
                <h2><%=link_to user.name, user %></h2>
                <table class="table table-condensed">
                    <% user.roles.each do |role| %>
                    <tr>
                        <td><%= role.name %></td>
                        <td><%= destroy_btn role_path(role, user: user.id) %></td>
                    </tr>
                    <% end %>
                </table>
            </div>
        </div>
    <% end %>
<% end %>
</div>