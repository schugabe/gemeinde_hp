<%= bootstrap_form_for(@event, style: :horizontal, left: "col-sm-2", right: "col-sm-4") do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-warning">
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 
    <%= f.text_field :title %>
 
    <%= f.text_area :description %>
 
    <%= f.datetime_select :starts_at %>
 
    <%= f.datetime_select :ends_at %>
 
    <%= f.check_box :all_day %>
  <%= f.form_group do %>
    <%= f.submit "asdf" %>
  <% end %>
<% end %>