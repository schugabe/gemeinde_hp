<h1><%= t('staff.events') %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%=link_to event.title,event %></td>
        <td><%=l event.starts_at, format: :long %></td>
        <td><%=l event.ends_at, format: :long %></td>
        <td><%= link_to t('actions.edit'), edit_event_path(event), class: "btn btn-default btn-sm" %> <%= link_to t('actions.destroy'), event, method: :delete, data: { confirm: t('actions.confirm') },class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
