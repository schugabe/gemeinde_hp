<% content_for :jumbotron do %>
<div class="jumbotron-content">
    <div class="cloud left-cloud">
    </div>
    <div class="cloud right-cloud">
    </div>
    <h1>Evangelische Kirche Thening</h1>
    <p>Kirche im Feld</p>
    <div class="kirche"></div>
</div>
<% end %>

<% unless @events.nil? || @events.length <= 0 %>
<div class="row">
    <div class="col-sm-12 col-md-6">
        <%= render partial: "events/event_box", object: @events.first, layout: "events/large_box", as: "event", locals: {text_length: 1000} %>
    </div>
    <div class="col-sm-12 col-md-6">
        <div class="row">
            <%= render partial: "events/event_box", collection: @events, layout: "/events/regular_box", as: "event", locals: {skip: 1} %>
        </div>
    </div>
</div>
<% end %>