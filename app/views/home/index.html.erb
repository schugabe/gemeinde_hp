<% unless @events.nil? || @events.length <= 0 %>
<h1>Upcoming</h1>
<div class="row">
    <div class="col-sm-12 col-md-6">
        <%= render partial: "events/large_box", object: @events.first, as: "event", locals: {text_length: 1000} %>
    </div>
    <div class="col-sm-12 col-md-6">
        <div class="row">
            <%= render partial: "events/event_box", collection: @events, layout: "/events/regular_box", as: "event", locals: {skip: 1} %>
        </div>
    </div>
</div>
<% end %>


