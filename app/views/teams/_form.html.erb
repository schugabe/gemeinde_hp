<%= bootstrap_form_for(@team, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |f| %>
    <%= print_errors @team %>
    <%= f.text_field :name %>
    <%= f.text_area :description, rows: 10 %>
    <%= f.form_group do %>
        <%= f.primary t('actions.save') %>
    <% end %>
<% end %>