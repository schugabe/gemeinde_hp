<%= render "devise/shared/links" %>

<h2><%= t('devise.sign_in') %></h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), style: :horizontal, left: "col-sm-2", right: "col-sm-4") do |f| %>
    <%= f.email_field :email, :autofocus => true %>
    <%= f.password_field :password %>
    <%= f.form_group do %>
        <%= f.check_box :remember_me %>
    <% end %>
    <%= f.form_group do %>
        <%= f.submit t('devise.sign_in') %>
    <% end %>
<% end %>


