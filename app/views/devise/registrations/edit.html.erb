<h2><%= t('devise.profile.edit') %></h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4") do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('devise.profile.waiting') %> <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.password_field :password, :autocomplete => "off", help: t('devise.profile.password') %>
  <%= f.password_field :password_confirmation %>
  <%= f.password_field :current_password, help: t('devise.profile.current_password') %>
  <%= f.form_group do %>
       <%= f.submit t('devise.profile.update') %>
  <% end %>
<% end %>

<h3><%= t('devise.profile.cancel') %></h3>
<p><%= button_to t('devise.profile.do_cancel'), registration_path(resource_name), :data => { :confirm => t('devise.profile.cancel_confirmation')}, :method => :delete, class: "btn btn-danger"  %></p>
