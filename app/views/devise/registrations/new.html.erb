<%= render "devise/shared/links" %>

<h2><%= t('devise.sign_up') %></h2>
<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4") do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, :autofocus => true %>
    <%= f.text_field :name %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
    <%= f.form_group do %>
        <%= f.submit t('devise.sign_up') %>
    <% end %>
<% end %>