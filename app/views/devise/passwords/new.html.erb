<%= render "devise/shared/links" %>
<h2><%= t('devise.forgot_password.forgot') %></h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4") do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, :autofocus => true %>
  <%= f.form_group do %>
      <%= f.submit t('devise.forgot_password.send_instructions') %>
  <% end %>
<% end %>


