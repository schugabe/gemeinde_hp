<%= render "devise/shared/links" %>

<h2><%= t('devise.forgot_password.change') %></h2>

<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4") do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
 
  <%= f.password_field :password, :autofocus => true %>
  <%= f.password_field :password_confirmation %>
  <%= f.form_group do %>
      <%= f.submit t('devise.forgot_password.do_change') %>
  <% end %>
<% end %>


