<h1>Anh√§nge</h1>
<%= link_to 'Neuen Anhang hochladen', new_event_attachment_path(@event), class: "btn btn-primary" %> <br><br>
<div class="table-responsive">
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Starts at</th>
                <th>Ends at</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @attachments.each do |attachment| %>
            <tr>
                <td><%= attachment.title %></td>
                <td><%= attachment.description %></td>
                <td><%= attachment.starts_at %></td>
                <td><%= attachment.ends_at %></td>
                <td><%= link_to 'Show', attachment %></td>
                <td><%= link_to 'Edit', edit_attachment_path(attachment) %></td>
                <td><%= link_to 'Destroy', attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>