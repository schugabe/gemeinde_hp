            <% @attachments.each do |attachment| %>
            <tr>
                <td><%= attachment.title %></td>
                <td><%= attachment.description %></td>
                <td><div class="btn-group pull-right"><%= link_to t('actions.edit'), edit_event_attachment_path(@event,attachment), class: "btn btn-default btn-sm" %> <%= link_to t('actions.destroy'), [@event,attachment], method: :delete, data: { confirm: t('actions.confirm') },class: "btn btn-danger btn-sm" %></div></td>
